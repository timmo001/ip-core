{
  "name": "upaas",
  "private": true,
  "version": "1.0.0",
  "description": "Lorem ipsum",
  "license": "MIT",
  "scripts": {
    "compile": "shx rm -rf dist/ && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "yarn run compile && node dist",
    "start:dev": "nodemon",
    "start:prod": "node dist",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "handlebars": "4.7.7",
    "logform": "2.2.0",
    "mariadb": "2.5.3",
    "moment": "2.29.1",
    "mysql": "2.18.1",
    "typeorm": "0.2.31",
    "upaas-core-plugins": "0.4.0",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "ws": "7.4.4",
    "yaml": "1.10.0"
  },
  "devDependencies": {
    "@types/logform": "1.10.1",
    "@types/node": "14.14.36",
    "@types/uuid": "8.3.0",
    "@types/winston": "2.4.4",
    "@types/ws": "7.4.0",
    "eslint": "7.21.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "shx": "0.3.3",
    "ts-jest": "26.5.3",
    "ts-loader": "8.0.10",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
