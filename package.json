{
  "name": "ip-core",
  "version": "1.0.0",
  "description": "ip core",
  "private": true,
  "author": {
    "name": "Aidan Timson <Timmo>",
    "email": "contact@timmo.xyz",
    "url": "https://ip.timmo.dev"
  },
  "keywords": [
    "ip"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timmo001/ip-core"
  },
  "license": "MIT",
  "bin": "dist/index.js",
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "package": "rimraf out && yarn build && pkg .",
    "start": "yarn build && node dist",
    "start:dev": "nodemon",
    "start:prod": "node dist",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "better-sqlite3": "7.4.3",
    "handlebars": "4.7.7",
    "ip-core-plugins": "0.4.0",
    "logform": "2.2.0",
    "mariadb": "2.5.4",
    "moment": "2.29.1",
    "mysql": "2.18.1",
    "typeorm": "0.2.37",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "ws": "8.2.1",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "@types/logform": "1.10.1",
    "@types/node": "16.7.13",
    "@types/uuid": "8.3.1",
    "@types/winston": "2.4.4",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.2.4",
    "nodemon": "2.0.12",
    "pkg": "5.3.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.4.2"
  },
  "optionalDependencies": {
    "node-hide-console-window": "2.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "outputPath": "out",
    "scripts": "dist/index.js",
    "targets": [
      "host"
    ]
  }
}
